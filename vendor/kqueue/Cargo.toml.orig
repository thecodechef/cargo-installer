[package]
name = "kqueue"
version = "1.1.1"
authors = ["William Orr <will@worrbase.com>"]
description = "kqueue interface for BSDs"
license = "MIT"
keywords = ["kqueue", "kevent", "bsd"]
categories = ["os::unix-apis", "filesystem"]
repository = "https://gitlab.com/rust-kqueue/rust-kqueue"
readme = "README.md"
documentation = "https://docs.worrbase.com/rust/kqueue/"
edition = "2021"

[package.metadata.docs.rs]
targets = [
	"x86_64-unknown-netbsd",
	"x86_64-unknown-freebsd",
	"i686-unknown-freebsd",
	"x86_64-unknown-dragonfly",
	"x86_64-unknown-openbsd",
	"aarch64-apple-darwin",
	"x86_64-apple-darwin",
	"aarch64-apple-ios",
	"x86_64-apple-ios",
]

[dependencies]
kqueue-sys = "^1.0.4"
libc = "^0.2.17"

[dev-dependencies]
criterion = { version = "0.5", features = ["html_reports"] }
dhat = "0.3.2"
tempfile = "3.1.0"

[[bench]]
name = "criterion_scaling"
harness = false

[lints.clippy]
print_stdout = "deny"
print_stderr = "deny"
